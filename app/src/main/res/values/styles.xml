<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<style name="App" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>


    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColorPrimary">@color/purple</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TransparentProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColorPrimary">@color/purple</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>


    <style name="TableRowStyle">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">#FFFFFF</item> <!-- Border color -->
    </style>

    <style name="TableCellStyle">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">#FFFFFF</item> <!-- Cell background color -->
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#45000000</item> <!-- Text color -->
    </style>

</resources>
